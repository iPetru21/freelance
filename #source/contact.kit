<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width"> 
    <link rel="icon" href="img/home/favicon.png" type="image/gif" sizes="16x16">
    <link rel="stylesheet" href="css/style.css">
    
    <title>Contact</title>
</head>
<body>
    <div class="wrapper regulation-bg">

        <!-- @import "header.html" -->

        <main class="main-about">
            <div class="container">
                <div class="main__row">
                    <div class="main__column-content">
                        <h1 class="title title-main">
                            Contact
                        </h1>
                        <p class="text">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                        </p>
                    </div>
                    <div class="main__column-image-contact"></div>
                </div>
            </div>
        </main>
        <section class="contact">
            <div class="container">
                <div class="contact__row">
                    <div class="contact__column-form">
                        <form class="contact__form" action="POST">
                            <div class="form-item">
                                <label for="name">Nume</label>
                                <input type="text" name="name" required>
                            </div>
                            <div class="form-item">
                                <label for="surname">Prenume</label>
                                <input type="text" name="surname" required>
                            </div>
                            <div class="form-item">
                                <label for="email">E-mail</label>
                                <input type="email" name="email">
                            </div>
                            <div class="form-item">
                                <label for="message">Mesaj</label>
                                <textarea name="message" cols="10" rows="10"></textarea>
                            </div>
                            <div class="form-button">
                                <button type="submit">Trimite</button>
                            </div>
                        </form>
                    </div>
                    <div class="contact__column-map">
                        <div class="map-corner left-top-map">
                            <span></span>
                            <span></span>
                        </div>
                        <div class="map-corner right-bottom-map">
                            <span></span>
                            <span></span>
                        </div>
                        <iframe src="https://maps.google.com/maps?q=Chisinau,%20Eugen%20Coca,%2015&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                        </iframe>
                    </div>
                </div>
                <div class="contact__info">
                    <div class="contact__info-column">
                        <img src="../img/contact/phone.svg" alt="">
                        <div class="contact-info">
                            <h4>Telefon:</h4>
                            <p>+37360647969</p>
                            <p>027242290</p>
                        </div>
                    </div>
                    <div class="contact__info-column">
                        <img src="img/contact/gmail.svg" alt="">
                        <div class="contact-info">
                            <h4>Email:</h4>
                            <p>contact@freelance.md</p>
                            <p>help@freelance.md</p>
                        </div>
                    </div>
                    <div class="contact__info-column">
                        <img src="../img/contact/address.svg" alt="">
                        <div class="contact-info">
                            <h4>Adresă:</h4>
                            <p>or.Chișinău, str Onisifor Ghibu, 14</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        
        <!-- @import "footer.html" -->
        
        <!-- End Footer -->
    </div>    
</body>
</html>